---
import "../styles/global.css";

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/rkpr-favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
	</head>
	<body class="bg-slate-800 text-slate-50 antialiased overflow-x-hidden h-screen cursor-default">
		<main class="mx-auto px-4 max-w-full lg:max-w-8xl md:px-12 flex flex-col items-center justify-center h-screen">
			<slot />
		</main>
	</body>
</html>
